<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<BorderPane fx:id="baseBorderPane" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="expense_tally.views.desktop.controllers.MainController">
    <top>
        <MenuBar fx:id="menuBar" BorderPane.alignment="CENTER">
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem mnemonicParsing="false" text="New" />
                        <MenuItem mnemonicParsing="false" text="Open…" />
                        <Menu mnemonicParsing="false" text="Open Recent" />
                        <SeparatorMenuItem mnemonicParsing="false" />
                        <MenuItem mnemonicParsing="false" text="Close" />
                        <MenuItem mnemonicParsing="false" text="Save" />
                        <MenuItem mnemonicParsing="false" text="Save As…" />
                        <MenuItem mnemonicParsing="false" text="Revert" />
                        <SeparatorMenuItem mnemonicParsing="false" />
                        <MenuItem mnemonicParsing="false" text="Preferences…" />
                        <SeparatorMenuItem mnemonicParsing="false" />
                        <MenuItem mnemonicParsing="false" text="Quit" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Edit">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Undo" />
                        <MenuItem mnemonicParsing="false" text="Redo" />
                        <SeparatorMenuItem mnemonicParsing="false" />
                        <MenuItem mnemonicParsing="false" text="Cut" />
                        <MenuItem mnemonicParsing="false" text="Copy" />
                        <MenuItem mnemonicParsing="false" text="Paste" />
                        <MenuItem mnemonicParsing="false" text="Delete" />
                        <SeparatorMenuItem mnemonicParsing="false" />
                        <MenuItem mnemonicParsing="false" text="Select All" />
                        <MenuItem mnemonicParsing="false" text="Unselect All" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                    <items>
                        <MenuItem mnemonicParsing="false" text="About MyHelloApp" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
    <center>
        <BorderPane>
            <top>
                <VBox spacing="10.0" BorderPane.alignment="CENTER">
                    <children>
                        <Label fx:id="titleLabel" text="Expense Tally">
                            <font>
                                <Font size="20.0" />
                            </font>
                            <VBox.margin>
                                <Insets left="10.0" />
                            </VBox.margin>
                        </Label>
                        <BorderPane>
                            <VBox.margin>
                                <Insets />
                            </VBox.margin>
                            <center>
                                <VBox fx:id="userFormVBox" BorderPane.alignment="CENTER">
                                    <BorderPane.margin>
                                        <Insets right="10.0" />
                                    </BorderPane.margin>
                                    <children>
                                        <HBox spacing="5.0">
                                            <children>
                                                <TextField fx:id="databaseFilePathTextField" onAction="#handleDatabaseFilePathTextFieldAction" onMouseClicked="#handleDatabaseFilePathTextFieldAction" opacity="0.5" prefHeight="25.0" prefWidth="350.0" text="Database file path" />
                                            </children>
                                        </HBox>
                                        <HBox spacing="5.0">
                                            <children>
                                                <TextField fx:id="csvFilePathTextField" onAction="#handleCsvFilePathTextFieldAction" onMouseClicked="#handleCsvFilePathTextFieldAction" opacity="0.5" prefHeight="25.0" prefWidth="350.0" text="CSV file path" />
                                            </children>
                                        </HBox>
                                    </children>
                                </VBox>
                            </center>
                            <right>
                                <Button fx:id="generateTransactionTableButton" onAction="#handleGenerateTransactionTableButtonAction" mnemonicParsing="false" text="Process" BorderPane.alignment="BOTTOM_RIGHT">
                                </Button>
                            </right>
                        </BorderPane>
                    </children>
                </VBox>
            </top>
            <center>
                <TableView fx:id="transactionTableView" prefHeight="200.0" prefWidth="200.0"
                           BorderPane.alignment="CENTER" editable="true">
                    <columns>
                        <TableColumn fx:id="tableAddRecordCheckBox" text="Add?"/>
                        <TableColumn text="Date">
                            <cellValueFactory>
                                <PropertyValueFactory property="time" />
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn text="Type">
                            <cellValueFactory>
                                <PropertyValueFactory property="type" />
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn text="Description">
                            <cellValueFactory>
                                <PropertyValueFactory property="description" />
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn text="Amount">
                            <cellValueFactory>
                                <PropertyValueFactory property="amount" />
                            </cellValueFactory>
                        </TableColumn>
                    </columns>
               <BorderPane.margin>
                  <Insets top="20.0" />
               </BorderPane.margin>
                </TableView>
            </center>
         <bottom>
              <ButtonBar fx:id="transactionTableButtonBar" prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                  <buttons>
                      <Button fx:id="transactionTableButton" mnemonicParsing="false" text="Apply Changes">
                          <opaqueInsets>
                              <Insets />
                          </opaqueInsets>
                      </Button>
                  </buttons>
                  <opaqueInsets>
                      <Insets />
                  </opaqueInsets>
              </ButtonBar>
         </bottom>
         <BorderPane.margin>
            <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
         </BorderPane.margin>
        </BorderPane>
    </center>
   <opaqueInsets>
      <Insets />
   </opaqueInsets>
</BorderPane>
